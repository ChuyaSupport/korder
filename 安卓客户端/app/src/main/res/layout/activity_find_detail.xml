<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".MyAddressActivity">
    <!--        标题-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                           app:cardUseCompatPadding="true"
                                           android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent">
                <TextView android:layout_width="wrap_content"
                          android:layout_alignParentLeft="true"
                          android:text="返回"
                          android:textColor="@color/main_color"
                          android:textSize="16sp"
                          android:onClick="back"
                          android:layout_margin="16dp"
                          android:layout_centerVertical="true"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="师院对面云旺超市"
                          android:id="@+id/detail_title"
                          android:textSize="16sp"
                          android:textStyle="bold"
                          android:textColor="#ff5500"
                          android:layout_height="wrap_content" android:layout_marginTop="20dp"
                          android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
                          android:layout_marginBottom="20dp" android:layout_centerInParent="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="match_parent">
                    <TextView android:layout_width="wrap_content"
                              android:text="¥ "
                              android:layout_centerVertical="true"
                              android:textColor="#f00"
                              android:textSize="20sp"
                              android:layout_alignParentLeft="true"
                              android:layout_marginLeft="16dp"
                              android:id="@+id/detail_yuan"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text=""
                              android:textSize="20sp"
                              android:id="@+id/detail_reward"
                              android:textColor="#f00"
                              android:layout_centerVertical="true"
                              android:layout_toRightOf="@id/detail_yuan"
                              android:layout_height="wrap_content"/>
                    <Button android:layout_width="50dp"
                            android:text=""
                            android:textColor="#fff"
                            android:id="@+id/detail_size"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/btn_as_label_selector"
                            android:layout_height="26dp" android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_margin="16dp"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:text="取件地址:  "
                              android:textSize="16sp"
                              android:textColor="@color/main_color"
                              android:id="@+id/dtl_get_code"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_toEndOf="@id/dtl_get_code"
                              android:text=""
                              android:textSize="16sp"
                              android:id="@+id/detail_get_address"
                              android:textColor="@color/main_color"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_margin="16dp"
                                android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:text="取  件  码:  "
                              android:textSize="16sp"
                              android:textColor="@color/main_color"
                              android:id="@+id/detail_get_addr"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_toEndOf="@id/detail_get_addr"
                              android:text=""
                              android:textSize="16sp"
                              android:id="@+id/detail_get_code"
                              android:textColor="@color/main_color"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_margin="16dp"
                                android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:text="送件地址:  "
                              android:textSize="16sp"
                              android:textColor="@color/main_color"
                              android:id="@+id/detail_dev_addr"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_toEndOf="@id/detail_dev_addr"
                              android:text=""
                              android:textSize="16sp"
                              android:id="@+id/detail_to_address"
                              android:textColor="@color/main_color"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_margin="16dp"
                                android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:text="收  件  人:  "
                              android:textSize="16sp"
                              android:textColor="@color/main_color"
                              android:id="@+id/detail_get_name"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_toEndOf="@id/detail_get_name"
                              android:text=""
                              android:textSize="16sp"
                              android:id="@+id/detail_to_name"
                              android:textColor="@color/main_color"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text=""
                              android:textColor="@color/main_color"
                              android:textSize="16sp"
                              android:paddingLeft="6dp"
                              android:id="@+id/detail_to_gender"
                              android:layout_toEndOf="@id/detail_to_name"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_margin="16dp"
                                android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:text="联系电话:  "
                              android:textSize="16sp"
                              android:textColor="@color/main_color"
                              android:id="@+id/detail_phone_number"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_toEndOf="@id/detail_phone_number"
                              android:text=""
                              android:textSize="16sp"
                              android:id="@+id/detail_to_phone_number"
                              android:textColor="@color/main_color"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                    <Button android:layout_width="70dp"
                            android:text="接单"
                            android:background="@drawable/btn_press_selector"
                            android:textColor="#fff"
                            android:onClick="getOrder"
                            android:layout_height="34dp" android:layout_marginTop="20dp"
                            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp" android:layout_centerInParent="true"
                            tools:ignore="OnClick"/>
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>